<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为AdminDao接口方法提供sql语句配置 -->
<mapper namespace="com.onlineShopping.dao.CommentDao">

    <!-- 评价商品 -->
    <insert id="commentGoods"  useGeneratedKeys="true" keyProperty="goodsId" keyColumn="goodsId" parameterType="java.lang.String">
        INSERT INTO comment(
            goodsId,
            userId,
            commentContent,
            commentTime
        ) VALUES (
            #{goodsId} ,
            #{userId} ,
            #{commentContent} ,
            #{commentTime}
        )
    </insert>
</mapper>